<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="600.0" prefWidth="800.0"
            xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="pl.SeVeT.bankApp.controllers.LoginPaneController">
    <children>
        <BorderPane prefHeight="400.0" prefWidth="600.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
                    AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <center>
                <VBox prefHeight="200.0" prefWidth="100.0" spacing="20.0" BorderPane.alignment="CENTER">
                    <children>
                        <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="40.0">
                            <children>
                                <Label text="Login">
                                    <font>
                                        <Font name="Times New Roman" size="23.0"/>
                                    </font>
                                </Label>
                                <TextField fx:id="loginField" promptText="Tutaj wpisz swój login...">
                                    <font>
                                        <Font name="Times New Roman" size="23.0"/>
                                    </font>
                                </TextField>
                            </children>
                        </HBox>
                        <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="40.0">
                            <children>
                                <Label text="Hasło">
                                    <font>
                                        <Font name="Times New Roman" size="23.0"/>
                                    </font>
                                </Label>
                                <PasswordField fx:id="passwordField" promptText="Tutaj wpisz swoje hasło...">
                                    <font>
                                        <Font name="Times New Roman" size="23.0"/>
                                    </font>
                                </PasswordField>
                            </children>
                        </HBox>
                    </children>
                </VBox>
            </center>
            <top>
                <BorderPane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
                    <center>
                        <VBox alignment="CENTER" spacing="20.0" BorderPane.alignment="CENTER">
                            <children>
                                <Label text="Witaj w banku by SeVeT">
                                    <font>
                                        <Font name="Times New Roman" size="63.0"/>
                                    </font>
                                </Label>
                                <Label text="Malwa koks 82,5 na siad">
                                    <font>
                                        <Font name="Times New Roman" size="33.0"/>
                                    </font>
                                </Label>
                            </children>
                        </VBox>
                    </center>
                </BorderPane>
            </top>
            <bottom>
                <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
                    <children>
                        <HBox alignment="CENTER" prefHeight="141.0" prefWidth="800.0" spacing="100.0">
                            <children>
                                <Button fx:id="exitButton" mnemonicParsing="false" onAction="#exitButtonOnAction"
                                        prefHeight="80.0" prefWidth="250.0" text="Wyjście">
                                    <font>
                                        <Font name="Times New Roman" size="23.0"/>
                                    </font>
                                </Button>
                                <Button fx:id="logInButton" mnemonicParsing="false" onAction="#logInButtonOnAction"
                                        prefHeight="80.0" prefWidth="250.0" text="Zaloguj">
                                    <font>
                                        <Font name="Times New Roman" size="23.0"/>
                                    </font>
                                </Button>
                            </children>
                        </HBox>
                        <Button fx:id="logInAdminButton" alignment="CENTER" contentDisplay="CENTER"
                                mnemonicParsing="false" onAction="#logInAdminButtonOnAction"
                                text="Zaloguj jako Administrator" textAlignment="CENTER">
                            <font>
                                <Font name="Times New Roman" size="19.0"/>
                            </font>
                        </Button>
                    </children>
                </VBox>
            </bottom>
        </BorderPane>
    </children>
</AnchorPane>
